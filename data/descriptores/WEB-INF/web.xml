<web-app>
 <description>Servlets CupiFlights</description>
 <!-- SERVLETS -->
 <servlet>
  <servlet-name>Home</servlet-name>
  <servlet-class>uniandes.cupi2.valorAndes.Servlets.ServletHome</servlet-class>
 </servlet>
 
 <servlet>
  <servlet-name>IntermediarioMasActivo</servlet-name>
  <servlet-class>uniandes.cupi2.valorAndes.Servlets.ServletIntermediarioMasActivo</servlet-class>
 </servlet>
 
 <servlet>  
<servlet-name>GeneradorReportPdf</servlet-name>  
<servlet-class>uniandes.cupi2.valorAndes.Servlets.GeneradorPdf</servlet-class>  
</servlet>  

<servlet>  
<servlet-name>RegistrarOperacion</servlet-name>  
<servlet-class>uniandes.cupi2.valorAndes.Servlets.ServletRegistrarOperacion</servlet-class>  
</servlet>  
  

 
 <!-- MAPPING -->
 <servlet-mapping>
  <servlet-name>Home</servlet-name>
  <url-pattern>/index.html</url-pattern>
 </servlet-mapping>
 
  <servlet-mapping>
  <servlet-name>IntermediarioMasActivo</servlet-name>
  <url-pattern>/mejor.htm</url-pattern>
 </servlet-mapping>
 
 <servlet-mapping>  
<servlet-name>GeneradorReportPdf</servlet-name>  
<url-pattern>/GeneradorPdf.htm</url-pattern>  
</servlet-mapping>  

<servlet-mapping>  
<servlet-name>RegistrarOperacion</servlet-name>  
<url-pattern>/registrar.htm</url-pattern>  
</servlet-mapping>  

</web-app>
